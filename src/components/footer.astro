---
import { Image } from "astro:assets"
import logo from "../../public/images/logo.svg"
import fb from "../../public/images/icon-facebook.svg"
import tw from "../../public/images/icon-twitter.svg"
import ins from "../../public/images/icon-instagram.svg"
import pi from "../../public/images/icon-pinterest.svg"

const menus = [
    {title:'Features',list:['Link Shortening', 'Branded Links' ,'Analytics']},
    {title:'Resources',list:['Blog', 'Developers' ,'Support']},
    {title:'Company ',list:['About', 'Our Team' ,'Careers','Contact']},
]
    
---



<div class="bg-black md:w-[1200px] w-[450px] justify-start md:flex md:mx-auto p-10 space-y-10 gap-5">
    
        <div>
            <Image src={logo} alt='logo'/>
        </div>
        
    <div class="md:flex md:space-x-16 space-y-10">
      {menus.map((menu)=>(
        <div class="">
           <h6 class="text-white mb-3 space-x-10">{menu.title}</h6>
           {menu.list.map((i)=>
               ( 
                <p class="text-white space-y-5 hover:text-green-500 hover:text-lg hover:font-semibold">{i}</p>
              )
            )}
        </div>
      ))}
    </div>
        
        <div class="flex justify-between gap-10 h-[30px]">
          <Image src={fb} alt='fb' class='size-5 hover:size-6' />
          <Image src={tw} alt='tw' class='size-5  hover:size-6' />
          <Image src={ins} alt='ins' class='size-5 hover:size-6' />
          <Image src={pi} alt='pi' class='size-5  hover:size-6' />
        </div>
   
</div>


